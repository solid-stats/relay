# Domains
RELAY_DOMAIN=relay.example.com
AUTH_DOMAIN=auth.example.com
BASE_DOMAIN=example.com

# Local host port for Authelia container
AUTHELIA_HOST_PORT=2317

# Shared secret for trusted headers (must match relay .env TRUSTED_AUTH_SHARED_SECRET)
AUTH_PROXY_SHARED_SECRET=replace-with-long-random-shared-secret-at-least-32

# Authelia secrets
AUTHELIA_SESSION_SECRET=replace-with-long-random-secret
AUTHELIA_STORAGE_ENCRYPTION_KEY=replace-with-long-random-secret
AUTHELIA_IDENTITY_VALIDATION_RESET_PASSWORD_JWT_SECRET=replace-with-long-random-secret
